<div class="container">
    <h1 id="title">ui-icon</h1>
    <h2>FontAwesome icons with Ember flare</h2>
    
    <h3>Basics</h3>
    <div class="row">
        <p class="descriptive col-xs-12 col-sm-8 col-lg-6">
            The basic syntax
        </p>        
    </div>
    
    <div class="row">
        <div class="col-xs-1">
            {{ui-icon icon='smile-o'}}
            {{ui-icon icon='meh-o'}}
            {{ui-icon icon='frown-o'}}
        </div>
        <div class="snippet col-xs-11">
            \{{ui-icon icon='smile-o'}} 
            \{{ui-icon icon='meh-o'}} 
            \{{ui-icon icon='frown-o'}}
        </div>
    </div>

